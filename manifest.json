{
  "manifest_version": 2,
  "name": "multilane",
  "version": "0.0.1",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "activeTab",
    "tabs",
    "storage",
    "browsingData",
    "http://*/*",
    "https://*/*",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["dist/background.bundle.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": ["dist/*.*"]
}

{
  "manifest_version": 2,
  "name": "Multilane",
  "version": "0.0.1",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "activeTab",
    "tabs",
    "storage",
    "browsingData",
    "http://*/*",
    "https://*/*",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["dist/background.bundle.js"],
    "persistent": true
  },
  "browser_action": {
    "icon": "128x128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": ["dist/*.*"],
  "icons": {
    "128": "src/assets/128x128.png"
  }
}
